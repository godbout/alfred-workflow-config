{
    "name": "godbout/alfred-workflow-config",
    "description": "Manage settings easily for your Alfred 3 or 4 Workflows.",
    "keywords": [
        "alfred",
        "workflow",
        "alfred-workflow",
        "config",
        "php"
    ],
    "homepage": "https://github.com/godbout/alfred-workflow-config",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Guillaume Leclerc",
            "email": "guill@sleeplessmind.com.mo",
            "role": "Craftsman"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "adbario/php-dot-notation": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Godbout\\Alfred\\Workflow\\": "src/"
        }
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.32",
        "phpunit/phpunit": "^9.5",
        "scrutinizer/ocular": "^1.8",
        "symfony/yaml": "^5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
     "scripts": {
        "test": "vendor/bin/phpunit --colors=always",
        "format": "php-cs-fixer fix -vvv --config=.php_cs.dist --ansi"
    },
    "config": {
        "sort-packages": true
    }
}
